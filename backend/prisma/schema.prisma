generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Crypto {
  id              Int      @id @default(autoincrement())
  icon            String
  name            String
  symbol          String
  rank            Int
  price           Float
  priceBtc        Float
  volume          Float
  marketCap       Float
  availableSupply Float
  totalSupply     Float
  priceChange1h   Float
  priceChange1d   Float
  priceChange1w   Float
  redditUrl       String?
  websiteUrl      String?
  twitterUrl      String?
  contractAddress String?
  decimals        Int?
  explorers       String[]
}

model Users {
  id        Int    @id @default(autoincrement())
  email     String @unique
  password  String
  createdAt String
  assets    Json?
}
